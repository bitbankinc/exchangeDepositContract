{
  "name": "exchangeDepositContract",
  "version": "0.0.1",
  "description": "A deposit contract for exchanges",
  "scripts": {
    "build": "truffle compile",
    "coverage": "npm run coverage:run && npm run coverage:check",
    "coverage:check": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "coverage:run": "truffle run coverage",
    "deploy:development": "truffle migrate --network development",
    "deploy:ropsten": "truffle migrate --network ropsten",
    "format": "npm run prettier -- --write",
    "format:ci": "npm run prettier -- --check",
    "ganache:run": "(ganache-cli -k istanbul -i 47934673 -m \"absorb surface step floor dance acid run math mean word taxi bottom\" -p 19382 >/dev/null 2>&1 &)",
    "ganache:stop": "PID=$(ps aux | grep 'node_modules/.bin/ganache-cl[i]' | sed 's/\\s\\s*/ /g' | cut -d' ' -f2) && if [ ! -z $PID ]; then kill $PID; fi",
    "lint": "solhint -c ./.solhint.json './contracts/**/*.sol'",
    "prepare": "npm run build && truffle networks --clean",
    "prettier": "prettier '{,!(coverage|example)/**/}*.{js,ts,sol}' --bracket-spacing --single-quote --trailing-comma=all",
    "test": "npm run ganache:run && npm run truffle; CODE=$?; npm run ganache:stop; exit $CODE",
    "truffle": "truffle test"
  },
  "keywords": [
    "exchange",
    "solidity",
    "contract",
    "deposits"
  ],
  "author": "Jonathan Underwood",
  "license": "MIT",
  "files": [
    "contracts/ExchangeDeposit.sol",
    "build/contracts/ExchangeDeposit.json"
  ],
  "devDependencies": {
    "@truffle/hdwallet-provider": "^1.0.40",
    "chai": "^4.2.0",
    "ganache-cli": "^6.9.1",
    "istanbul": "^0.4.5",
    "mocha": "^8.0.1",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.56",
    "rlp": "^2.2.6",
    "solc": "~0.7.0",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.10",
    "truffle": "^5.1.36",
    "tslint": "^5.20.0"
  }
}
